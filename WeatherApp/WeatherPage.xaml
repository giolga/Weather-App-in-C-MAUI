<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.WeatherPage"
             Title="WeatherPage">
    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto" RowSpacing="20">
        <StackLayout Grid.Row="0" Margin="20, 20, 20, 0" Orientation="Horizontal">
            <Frame Padding="10" CornerRadius="35" HasShadow="True" BorderColor="LightGray">
                <Label Text="Your Location" FontSize="Default" />
            </Frame>

            <ImageButton Source="C:\Users\GioLGA\Desktop\WeatherApp\WeatherApp\Images\magnifying-glass.png" HeightRequest="30" WidthRequest="30" Aspect="AspectFit" HorizontalOptions="EndAndExpand" />
        </StackLayout>

        <StackLayout Grid.Row="1" Orientation="Vertical">
            <Label x:Name="LblCity" 
                   FontSize="40"
                   HorizontalOptions="Center"
                   TextColor="Gray" />

            <Label x:Name="LblWeatherDescription"
                   FontSize="Medium"
                   HorizontalOptions="Center" 
                   TextColor="SlateGray" 
                   />
        </StackLayout>

        <Image Grid.Row="2"
               x:Name="ImgWeatherIcon"
               VerticalOptions="Start"
               HeightRequest="300"
               WidthRequest="300" />

        <Grid Grid.Row="3"
              RowDefinitions="Auto, Auto"
              ColumnDefinitions="0.33*, 0.33*, 0.33*" 
              Margin="20">

            <Image Grid.Row="0" 
                   Grid.Column="0"
                   HorizontalOptions="Center"
                   HeightRequest="25"
                   Source="C:\Users\GioLGA\Desktop\WeatherApp\WeatherApp\Images\icon_50n.png"/>

            <Label x:Name="LblHumidity"
                   Grid.Row="1"
                   Grid.Column="0" 
                   FontSize="Medium"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"/>

            <Label x:Name="LblTemperature"
                   Grid.Row="0" 
                   Grid.Column="1"
                   Grid.RowSpan="2"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   FontSize="40"
                   FontAttributes="Bold"/>


            <Image Grid.Row="0" 
                   Grid.Column="2"
                   HorizontalOptions="Center"
                   HeightRequest="25"
                   Source="C:\Users\GioLGA\Desktop\WeatherApp\WeatherApp\Images\wind.png"/>

            <Label x:Name="LblWind"
                   Grid.Row="1"
                   Grid.Column="2" 
                   HorizontalOptions="Center"
                   VerticalOptions="Start"/>

            <CollectionView Grid.Row="4" x:Name="CvWeather" HeightRequest="150" Margin="0, 40, 0, 0" HorizontalOptions="Center" VerticalOptions="Center" Background="Aqua" Grid.ColumnSpan="3">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="20" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate >
                    <DataTemplate>
                        <Grid Grid.Row="4" RowDefinitions="Auto, Auto, Auto" HorizontalOptions="Center" >
                            <Image Grid.Row="0" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Start"
                                   HeightRequest="50"
                                   WidthRequest="50"
                                   Source="C:\Users\GioLGA\Desktop\WeatherApp\WeatherApp\Images\icon_02n.png"/>

                            <Label Grid.Row="1"
                                   FontSize="Large"
                                   HorizontalOptions="Center"
                                   Text="{Binding Main.Temperature}"/>

                            <Label Grid.Row="2"
                               FontSize="Small"
                               HorizontalOptions="Center"
                               Text="2024-06-06"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>